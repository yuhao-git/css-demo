.floating_page
  background #164CCA
  background-image linear-gradient(rgba(3, 192, 60, .3) 1px, transparent 1px), linear-gradient(90deg, rgba(3, 192, 60, .3) 1px, transparent 1px)
  background-size 1em 1em
  .color_pick
    position fixed
    top 4px
    right 4px
    outline none
    border none
    -webkit-appearance none
    height 30px
    width 64px
    padding 0 6px
    background rgba(0, 0, 0, .4)
    box-shadow 0 1px 4px rgba(0, 0, 0, .25)
    border-radius 4px
  .pass_button
    position fixed
    top 40px
    right: 4px
    height 30px
    width 64px
    outline none
    border none
    -webkit-appearance none
    background rgba(0, 0, 0, .4)
    box-shadow 0 1px 4px rgba(0, 0, 0, .25)
    border-radius 4px
    color rgba(255, 255, 255, .6)
    font-size 12px
    .highlight
      color rgba(255, 255, 0, .6)
  .meta
    position fixed
    bottom 0
    left 0
    padding 16px
    .text
      line-height 1
      font-size 14px
      color rgba(255, 255, 255, .5)
      text-shadow 1px 1px 1px rgba(0, 0, 0, .1), 2px 2px 2px rgba(0, 0, 0, .1), 3px 3px 3px rgba(0, 0, 0, .1)
      position relative
      top -10px
      left 6px
      a
        text-decoration none
        color rgba(255, 255, 0, .6)
        transition color .25s ease-in-out
        &:hover
          color rgba(255, 255, 80, 1)